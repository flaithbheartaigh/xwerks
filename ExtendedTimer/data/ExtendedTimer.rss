RESOURCE TBUF r_default_document_name
	{
	buf="EXTE";
	}

// -----------------------------------------------------------------------------
//
//	Define default menu and CBA key.
//
// -----------------------------------------------------------------------------
//
RESOURCE EIK_APP_INFO
	{
	menubar = r_menubar;
	cba = R_AVKON_SOFTKEYS_OPTIONS_EXIT;
	}


// -----------------------------------------------------------------------------
//
//   r_menubar
//   Main menubar
//
// -----------------------------------------------------------------------------
//
RESOURCE MENU_BAR r_menubar
	{
	titles =
		{
		MENU_TITLE { menu_pane = r_menu; }
		};
	}


// -----------------------------------------------------------------------------
//
//   r_menu
//   Menu for "Options"
//
// -----------------------------------------------------------------------------
//
RESOURCE MENU_PANE r_menu
	{
	items =
		{
		// added the new Options menu command here
		MENU_ITEM
				{
				command = ESetMinuteTimerCommand;
				txt = qtn_set_min_timer_command;
				},
		MENU_ITEM
				{
				command = ESetTwoMinuteTimerCommand;
				txt = qtn_set_two_min_timer_command;
				},
		MENU_ITEM
				{
				command = ESet60MinuteTimerCommand;
				txt = qtn_set_60_min_timer_command;
				},
		MENU_ITEM
				{
				command = ESetSecondTimerCommand;
				txt = qtn_set_sec_min_timer_command;
				},
		MENU_ITEM
				{
				command = EStopTimerCommand;
				txt = qtn_stop_timer_command;
				},				
		MENU_ITEM
				{
				command = EAknSoftkeyExit;
				txt = qtn_exit;
				}
		};
	}

// -----------------------------------------------------------------------------
//
// About dialog resource.
